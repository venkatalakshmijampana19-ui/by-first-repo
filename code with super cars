      },
      {
        name: "Ferrari SF90",
        model: "2020",
        horsepower: "986 HP",
        image: "https://images.unsplash.com/photo-1591526750967-2d93c13f86b1?ixlib=rb-4.0.1&auto=format&fit=crop&w=800&q=80"
      },
      {
        name: "Bugatti Chiron",
        model: "2018",
        horsepower: "1500 HP",
        image: "https://images.unsplash.com/photo-1608363307413-8266bfa786f0?ixlib=rb-4.0.1&auto=format&fit=crop&w=800&q=80"
      },
      {
        name: "McLaren 720S",
        model: "2021",
        horsepower: "720 HP",
        image: "https://images.unsplash.com/photo-1621834651867-7b68e6598f2b?ixlib=rb-4.0.1&auto=format&fit=crop&w=800&q=80"
      }
    ];

    const container = document.getElementById('dashboard-container');

    superCars.forEach(car => {
      const card = document.createElement('div');
      card.className = 'card';

      card.innerHTML = `
        <img src="${car.image}" alt="${car.name}" class="car-image"/>
        <div class="card-content">
          <h3 class="car-name">${car.name}</h3>
          <div class="car-details">Model: ${car.model}</div>
          <div class="car-details">Horsepower: ${car.horsepower}</div>
        </div>
      `;
      container.appendChild(card);
    });
  </script>
